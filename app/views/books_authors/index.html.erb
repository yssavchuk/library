<p id="notice"><%= notice %></p>

<h1>Books Authors</h1>

<table>
  <thead>
    <tr>
      <th>Book</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books_authors.each do |books_author| %>
      <tr>
        <td><%= books_author.book_id %></td>
        <td><%= books_author.author_id %></td>
        <td><%= link_to 'Show', books_author %></td>
        <td><%= link_to 'Edit', edit_books_author_path(books_author) %></td>
        <td><%= link_to 'Destroy', books_author, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

